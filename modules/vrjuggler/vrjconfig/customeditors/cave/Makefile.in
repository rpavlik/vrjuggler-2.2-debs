# -----------------------------------------------------------------------------
# Makefile.in for vrjuggler/vrjconfig/customeditors/cave.  It
# requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/make.defs.mk
include @topdir@/java.defs.mk

jardir=			$(beandir)/customeditors
bundle_jardir=		$(bundle_vrj_beandir)/customeditors

srcdir=			@srcdir@
top_srcdir=		@top_srcdir@
EXTRA_SRCS_PATH=	$(srcdir)/../tweek/idl
INSTALL=		@INSTALL@
INSTALL_FILES=		
JAVA_IDL_OPTS=		@JAVA_IDL_OPTS@ @JAVA_IDL_GENDIR_OPT@$(srcdir)
JAVA_IDL_INCLUDES=	@JAVA_IDL_INCFLAG@$(top_srcdir)

BEANS=			CaveEditor

_LOCAL_CLEAN=		1

include $(MKPATH)/dpp.obj.mk

# -----------------------------------------------------------------------------
# Uses ant to build the java classes and JARs
# -----------------------------------------------------------------------------
build-editor:
	@echo "------------------------------------------------"
	@echo "Building CaveEditor java sources"
	@echo "------------------------------------------------"
	$(ANT)

_clean:
	$(ANT) clean

# -----------------------------------------------------------------------------
# Extra targets.
# -----------------------------------------------------------------------------

# This cannot be named 'install' because Doozer++ already defines that.
install-editor:
	@echo "------------------------------------------------"
	@echo "Installing the CaveEditor code base"
	@echo "------------------------------------------------"
ifneq ($(JARS), )
	for jar in $(JARS) ;						\
          do								\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(topdir)/customeditors/cave/$$jar $(javadir) || exit 1; \
          done
endif
ifneq ($(BEANS), )
	for bean in $(BEANS) ;						\
          do								\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(topdir)/customeditors/cave/$$bean.jar $(jardir) ||	\
                exit 1 ;						\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(top_srcdir)/customeditors/cave/$$bean.xml		\
                $(jardir) || exit 1;					\
          done
endif
ifeq (@PLATFORM@, Darwin)
ifneq ($(JARS), )
	for jar in $(JARS) ;						\
          do								\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(topdir)/customeditors/cave/$$jar			\
                $(bundle_vrj_javadir) || exit 1 ;			\
          done
endif
ifneq ($(BEANS), )
	for bean in $(BEANS) ;						\
          do								\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(topdir)/customeditors/cave/$$bean.jar		\
                $(bundle_jardir) || exit 1 ;				\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(top_srcdir)/customeditors/cave/$$bean.xml		\
                $(bundle_jardir) || exit 1 ;				\
          done
endif
endif
