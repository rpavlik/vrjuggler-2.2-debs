# -----------------------------------------------------------------------------
# Makefile.in for vrjuggler/vrjconfig/customeditors/pinchglove.  It requires
# GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/make.defs.mk
include @topdir@/java.defs.mk

jardir=			$(beandir)/customeditors
bundle_jardir=		$(bundle_vrj_beandir)/customeditors

srcdir=			@srcdir@
top_srcdir=		@top_srcdir@
INSTALL=		@INSTALL@

BEANS=			PinchGloveEditor

# -----------------------------------------------------------------------------
# Uses ant to build the java classes and JARs
# -----------------------------------------------------------------------------
build-editor:
	@echo "------------------------------------------------"
	@echo "Building PinchGloveEditor Java sources"
	@echo "------------------------------------------------"
	$(ANT)

clean clobber:
	$(ANT) clean

# -----------------------------------------------------------------------------
# Extra targets.
# -----------------------------------------------------------------------------

# This cannot be named 'install' because Doozer++ already defines that.
install-editor:
	@echo "------------------------------------------------"
	@echo "Installing the PinchGloveEditor code base"
	@echo "------------------------------------------------"
ifneq ($(JARS), )
	for jar in $(JARS) ;						\
          do								\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(topdir)/customeditors/pinchglove/$$jar $(javadir) ||	\
                exit 1;							\
          done
endif
ifneq ($(BEANS), )
	for bean in $(BEANS) ;						\
          do								\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(topdir)/customeditors/pinchglove/$$bean.jar		\
                $(jardir) || exit 1 ;					\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(top_srcdir)/customeditors/pinchglove/$$bean.xml	\
                $(jardir) || exit 1;					\
          done
endif
ifeq (@PLATFORM@, Darwin)
ifneq ($(JARS), )
	for jar in $(JARS) ;						\
          do								\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(topdir)/customeditors/pinchglove/$$jar		\
                $(bundle_jardir) || exit 1 ;				\
          done
endif
ifneq ($(BEANS), )
	for bean in $(BEANS) ;						\
          do								\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(topdir)/customeditors/pinchglove/$$bean.jar		\
                $(bundle_jardir) || exit 1 ;				\
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX)		\
                $(EXTRA_INSTALL_ARGS)					\
                $(top_srcdir)/customeditors/pinchglove/$$bean.xml	\
                $(bundle_jardir) || exit 1 ;				\
          done
endif
endif
