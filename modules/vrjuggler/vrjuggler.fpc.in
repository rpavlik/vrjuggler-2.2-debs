vrj_app_icons: ${vrj_share_dir}/data/bundle/vrjuggler.icns
vrj_app_all_resources: ${vrj_share_dir}/data/bundle/vrjuggler.icns ${vrj_share_dir}/data/bundle/vrjuggler.plist
