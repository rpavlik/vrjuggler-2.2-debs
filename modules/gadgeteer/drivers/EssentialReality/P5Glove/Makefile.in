POST_DSO_DRIVER_DEPS+=	$(LIBUSB_LIBS)
endif

ifeq  ($(BUILD_DRIVER), Y)
C_AFTERBUILD=	driver-dso

SRCS=		p5glove.c 		\
		P5GloveWrapper.cpp	\
		P5GloveStandalone.cpp	\
		$(EXTRA_SRCS)
endif

EXTRA_SRCS_PATH=$(srcdir)/libp5glove/src

include $(MKPATH)/dpp.obj.mk
include @topdir@/driver.defs.mk

